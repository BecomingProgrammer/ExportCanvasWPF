<Window x:Class="ExportCanvasWMF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExportCanvasWMF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
            <Label>Export Path:</Label>
            <TextBox Name="txtFilePath" Width="100">
                <TextBox.Text>
                    d://1.wmf
                </TextBox.Text>
            </TextBox>
            <Button Width="90" Click="Button_Click">Export to WMF</Button>
        </StackPanel>

        <Canvas Width="200" Height="200" Name="MyCanvas" Background="Azure">
            <Ellipse Fill="Blue" Canvas.Left="18" Canvas.Top="54" StrokeThickness="2" Height="40"   Stroke="Black" Width="46" />
            <Rectangle Fill="Yellow" Canvas.Left="88" StrokeThickness="2" Canvas.Top="63" Height="31"   Stroke="Black" Width="81" />
            <Rectangle Canvas.Left="59.145" Canvas.Top="121" StrokeThickness="2" Fill="Red" Height="31"   Stroke="Blue" Width="81" />
        </Canvas>
    </StackPanel>
</Window>
